<div class="row">
  {{#each notes}}
    <div class="col-md-3">
      <div class="card my-2">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            <div style="font-size:1rem;">{{title}}</div>
            <div><a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a></div>
          </h4>
        </div>
        <div class="card-footer">
          <p class="card-text" style="font-size:0.7rem;">{{description}}</p>
            {{!-- Boton para eliminar una nota --}}
            <form action="/notes/delete-note/{{_id}}?_method=DELETE" method="POST">
              <input type="hidden" name="_method" />
              <div class="d-grid grap-2">
              <button
                type="submit"
                class="btn btn-danger btn-sm"
                style="font-size:0.7rem;"
              >
                Eliminar nota
              </button>
              </div>
            </form>
        </div>
      </div>
    </div>

  {{else}}
    <div class="col-md-3">
      <div class="card position-absolute top-50 start-50 translate-middle">
        <div class="card-body">
          <h1>Hola, {{user.name}}</h1>
          <p class="lead">No hay notas para mostrar.</p>
          <div class="d-grid grap-2">
            <a
              type="submit"
              class="btn btn-success btn-sm txt-white"
              style="font-size:0.7rem;"
              href="/notes/add"
            >
              Agregar nota
            </a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>